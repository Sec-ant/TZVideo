/* pages/classify/classify.wxss */

.coding{
  width: 100%;
  height: 100%;
  background-color: #f1f6fa;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: xx-large;
  font-weight: 200;
}
.classify-board{
  position: absolute;
  top: 200rpx;
  width: 100%;
  display: flex;
  padding: 20rpx;
  background-color: white;
  flex-direction: column;
}
.backgroud{
  position: absolute;
  top:-120rpx;
  width: 100%;
  z-index: -1;
}
.classify-board .board-bar{
  margin: 10rpx 20rpx 0 10rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
}
.classify-board .board-bar .bar-item{
  margin:10rpx 10rpx;
  height: 60rpx;
  display: flex;
  white-space:nowrap;
  padding: 5rpx 10rpx 5rpx 10rpx;
  justify-content: center;
  align-items: center;
  border-radius: 6rpx;
}
.bg-unselected{
  background-color: #f7f7f7;
}
.bg-selected{
  background-color: #68cb78 ;
  color: white;
}
.movies-list{
  width: 100%;
  margin-top: 40rpx;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
}
.movies-list .movie-pictures{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: auto;

}
.movies-list .movie-pictures .movies-pic{
  width: 30%;
  height: 290rpx;
  border-radius: 10rpx;
  margin: 0 10rpx 0 0;

  
}
.movies-list .movie-pictures .screen-swiper {
  width: 70%;
  height: 290rpx;
}
.movies-list .movie-pictures .screen-swiper swiper-item {
  width: 100%;
  height: 290rpx !important;
  align-items: center;
  justify-content: center;
}
.movie-info{
  transform:translateY(-70rpx);
  
}
.movie-info .movie-title{
  font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
  font-weight: 500;
  font-size:large;
}
.movie-info .movie-rating{
  border-radius: 25%;
}
.movie-info .movie-comment{
  color: gray;
}
.movies-list .playlist{
  width: 100%;
  background-color: #e7e7e7;
  margin-bottom: 20rpx;
}
.movies-list .playlist image{
  width: 100%;
}
.movies-list .playlist .playlist-info{
  padding: 10rpx;
}
.movies-list .playlist .playlist-info .playlist-title{
  font-size: large;
  font-weight: 500;
}